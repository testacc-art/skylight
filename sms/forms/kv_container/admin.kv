<Administrator>:
    BoxLayout:
        padding: dp(10)

        Label:
            size_hint_x: .6

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
            MenuButton:
                text:"Accounts"
                on_press:
                    root.manager.current = 'accounts'
            MenuButton:
                text:"Backups"
                on_press:
                    root.manager.current = 'backups'
            MenuButton:
                text:"Manage courses"
                on_press:
                    root.manager.current = 'course_mgmt'
            GridLayout:
                id: grid
                cols: 2
                padding: dp(20)
                size_hint_y: .1
                CustomLabel:
                    text: 'Result Edit'
                    halign: 'left'
                Switch:
                    id: result_switch
                    on_active: root.set_results_edit()
            MenuButton:
                text: "Start new academic session"
