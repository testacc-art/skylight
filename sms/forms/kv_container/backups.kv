<Backups>:
    dv2: dv2
    BoxLayout:
        padding: dp(20)
        spacing: dp(20)
        orientation: 'horizontal'

        DataViewer2:
            id: dv2
            cols: 3
            size_hint_x: .85
            weightings: [.5, .1, .2]
            headers: ['File Name', 'File Size', 'Created']
            _data: root._data
            selectable: True

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .15
            spacing: dp(20)

            MenuButton:
                text: "Create New Backup"
                on_press: root.backup_popup()
            MenuButton:
                text: "Refresh"
                on_press: root.refresh()
            Label:

<ActionMenuPopup>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(20)
        CustomLabel:
            text: 'Select an action'
            halign: 'left'
            valign: 'top'
            size_hint_y: .2
        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            size_hint_y: .8
            MenuButton:
                text: "Download"
                size_hint_y: .98
                on_press: root.confirm(self.text)
            MenuButton:
                text: "Restore"
                size_hint_y: .98
                on_press: root.confirm(self.text)
            MenuButton:
                text: "Delete"
                size_hint_y: .98
                on_press: root.confirm(self.text)

<CreateBackupPopup>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(20)
        CustomTextInput:
            id: tag
            focus: True
            hint_text: "Add a custom tag (Optional)"
            size_hint: 1, .5
            on_text_validate: root.backup()
        MenuButton:
            text: "Create Backup"
            on_press: root.backup()

<RestoreBackupPopup>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)
        GridLayout:
            cols: 2
            spacing: dp(20)
            row_default_height: dp(30)
            row_force_default: True
            size_hint_y: .7
            CustomLabel:
                text: 'Include old account information?'
                halign: 'left'
                valign: 'center'
                size_hint_x: .7
            CustomSpinner:
                id: include_accounts
                width: 200
                size_hint_x: .3
                values: ['No', 'Yes']
            CustomLabel:
                text: 'Backup current data?'
                halign: 'left'
                valign: 'center'
                size_hint_x: .7
            CustomSpinner:
                id: backup_current
                width: 200
                size_hint_x: .3
                values: ['No', 'Yes']
        MenuButton:
            text: "Restore"
            size_hint_y: .3
            on_press: root.confirm()
