<ActionMenuPopup>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        CustomLabel:
            text: 'Select an action'
            halign: 'left'
            font_size: sp(20)
        MenuButton:
            text: "Download"
            on_press: root.confirm(self.text)
        MenuButton:
            text: "Restore"
            on_press: root.confirm(self.text)
        MenuButton:
            text: "Delete"
            on_press: root.confirm(self.text)

<CreateBackupPopup>:
    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(20)
        CustomTextInput:
            id: tag
            focus: True
            hint_text: "Add a custom tag (Optional)"
            size_hint: 1, .5
            on_text_validate: root.backup()
        MenuButton:
            text: "Create Backup"
            on_press: root.backup()

<RestoreBackupPopup>:
    GridLayout:
        cols: 2
        spacing: dp(20)
        padding: dp(20)
        row_force_default: True
        CustomLabel:
            text: 'Include account information?'
            halign: 'left'
        CustomSpinner:
            id: include_accounts
            width: 150
            values: ['No', 'Yes']
        CustomLabel:
            text: 'Backup current data?'
            halign: 'left'
        CustomSpinner:
            id: backup_current
            width: 150
            values: ['No', 'Yes']
        MenuButton:
            text: "Restore"
            on_press: root.restore()


<Backups>:
    dv2: dv2
    BoxLayout:
        padding: dp(20)
        spacing: dp(20)
        orientation: 'horizontal'

        DataViewer2:
            id: dv2
            cols: 3
            size_hint_x: .85
            weightings: [.5, .1, .2]
            headers: ['File Name', 'File Size', 'Created']
            _data: root._data
            selectable: True

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .15
            spacing: dp(20)

            MenuButton:
                text: "Create New Backup"
                on_press: root.backup_popup()
            MenuButton:
                text: "Refresh"
                on_press: root.refresh()
