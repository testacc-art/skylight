<CourseDetails>:
    BoxLayout:
        padding: dp(20)
        GridLayout:
            cols: 2
            size_hint: (.5, None)
            height: self.minimum_height
            spacing: (dp(10), dp(5))
            row_default_height: dp(30)
            row_force_default: True
            pos_hint: {'top': 1}
            CustomLabel:
                text: 'Course code'
                halign: 'left'
            BoxLayout:
                CustomTextInput:
                    id: code
                    max_length: 6
                    width: dp(100)
                ImageButton:
                    size_hint_x: None
                    width: dp(50)
                    source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-search-48.png')
                    on_press: root.search()
                ImageButton:
                    size_hint_x: None
                    width: dp(50)
                    source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-delete-48.png')
                    on_press: root.clear_fields()
            CustomLabel:
                text: 'Course title'
                halign: 'left'
            CustomTextInput:
                id: title
            CustomLabel:
                text: 'Course credit'
                halign: 'left'
            CustomTextInput:
                id: credit
                max_length: 1
                width: dp(100)
            CustomLabel:
                text: 'Course semester'
                halign: 'left'
            CustomSpinner:
                id: semester
                values: ['First', 'Second']
            CustomLabel:
                text: 'Course level'
                halign: 'left'
            CustomSpinner:
                id: level
                values: ['100', '200', '300', '400', '500']
            CustomLabel:
                text: 'Teaching department'
                halign: 'left'
            CustomSpinner:
                id: teaching_dept
                values: ['MEE', 'EEE', 'PRE', 'CHE', 'PEE', 'MTH', 'CHM', 'GST', 'CED', 'CVE', 'PHY', 'CPE']
            CustomLabel:
                text: 'Start date'
                halign: 'left'
            CustomTextInput:
                id: start_date
                width: dp(100)
            CustomLabel:
                text: 'End date'
                halign: 'left'
            CustomTextInput:
                id: end_date
                width: dp(100)
            CustomLabel:
                text: 'Optional'
                halign: 'left'
            CustomTextInput:
                id: options
                width: dp(50)
        FloatLayout
