<Logs>:
    dv: dv
    BoxLayout:
        padding: dp(20)
        spacing: dp(20)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .6
            DataViewer2:
                id: dv
                cols: 3
                weightings: [.25, .5, .25]
                headers: ['User', 'Action', 'Time']
                _data: root.displayed_logs
            BoxLayout
                size_hint_y: None
                height: dp(35)
                Button:
                    text: '<<'
                    on_press: root.pan_up()
                Label:
                    text: "{} - {} of {}".format(root.view_start, root.view_stop, len(root.ufmt_displayed_logs))
                Button:
                    text: '>>'
                    on_press: root.pan_down()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
            RelativeLayout:
                GridLayout:
                    cols: 3
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: None, None
                    row_default_height: 50
                    col_default_width: dp(175)
                    row_force_default: True
                    col_force_default: True
                    size: self.minimum_size
                    padding: [10, 0]

                    Label:
                        text: 'Filter'
                        texture_size: self.size
                        halign: 'left'
                        font_size: sp(30)
                    Label
                    Label

                    DatePicker:
                        id: date_picker
                        text: 'From Date'
                        width: dp(175)
                    CustomSpinner:
                        id: users_spinner
                        text: 'Users'
                        width: dp(175)
                    CustomSpinner:
                        id: operations_spinner
                        text: 'Operations'
                        width: dp(175)

                    Label
                    Label
                    Label

                    Button:
                        text: 'Clear Filters'
                        halign: 'left'
                        on_press: root.fetch_all()
                    CustomSpinner:
                        id: time_sort_spinner
                        text: 'Sort by'
                        width: dp(175)
                    Button:
                        text: 'Apply Filters'
                        on_press: root.fetch_filtered()


            CustomTextInput:
                id: textview
                size_hint: 1, 1
                multiline: True
                height: 400
