
<Logs>:
	canvas.before:
		Rectangle:
			size: self.size
			pos: self.pos
			source: os.path.join(root.form_root, 'resc', 'images', 'unibengate.jpg')

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			canvas.before:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
			size_hint_y: None
			height: 50
			Label:
                text: 'LOGS'
                font_size: 25
                halign: 'center'
                valign: 'middle'
                size_hint_x: .9
            ImageButton:
                size_hint_x: .1
                source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-back-64.png')
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'main_page'


        BoxLayout:
            orientation: "vertical"

            Label:
                size_hint_y: .1

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .1

                Label:
                    size_hint_x: .5

                Spinner:
                    text: "Users"
                    values: "100L_course_adviser", "200L_course_adviser", "300L_course_adviser", "400L_course_adviser", '500L_course_adviser', 'Admin'
                    size_hint_x: .5
                    #size: (40, 40)
                    halign: 'center'
                    background_color: (0,0,0,1)

                Label:
                    size_hint_x: .5
            Label:
                text: 'Log message'
                halign: 'center'
                #spacing: (10, 5)
                size_hint_y: .1
                font_size: 20

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .7

                Label:
                    size_hint_x: .1

                TextInput:
                    #height:300
                    #width: 700
                    halign: 'center'
                    size_hint_x: .8

                Label:
                    size_hint_x: .1

            Label:
                size_hint_y: .02

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .06
                halign: 'center'

                Label:
                    size_hint_x: .1

                Button:
                    text:"Filter"
                    #halign: 'right'
                    background_color: (0,0,0,1)
                    size_hint_x: .2

                Label:
                    size_hint_x: .1

                Button:
                    text:"Next page"
                    #halign: 'right'
                    background_color: (0,0,0,1)
                    size_hint_x: .2

                Label:
                    size_hint_x: .02

                CustomTextInput:
                    #halign: 'right'
                    size_hint_x: .06

                Label:
                    size_hint_x: .02

                Button:
                    text:"Previous page"
                    #halign: 'right'
                    background_color: (0,0,0,1)
                    size_hint_x: .2

                Label:
                    size_hint_x: .1

            Label:
                size_hint_y: .1