<MainPage>:
    dv: dv
    BoxLayout:
        padding: dp(10)

        FloatLayout:
            size_hint_x: .6
            DataViewer2:
                id: dv
                cols: 3
                center_y: .5
                weightings: [.2, .4, .2]
                headers: ['User', 'Action', 'Time']
                _data: root.logs

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4

            MenuButton:
                text: "Personal Data"
                on_press:
                    root.manager.current = 'personal_info'
            MenuButton:
                text:"Course Registration"
                on_press:
                    root.manager.current = 'course_registration'
            MenuButton:
                text:"Result Entry"
                on_press:
                    root.manager.current = 'result_entry_menu'
            MenuButton:
                text:"Course Details"
                on_press:
                    root.manager.current = 'course_details'
            MenuButton:
                text:"Reports"
                on_press:
                    root.manager.current = 'page_reports'
            MenuButton:
                text:"Logs"
                on_press:
                    root.manager.current = 'logs'
            MenuButton:
                text:"Administrator"
                on_press:
                    root.manager.current = 'admin'
            Label:
            GridLayout:
                valign: 'bottom'
                cols: 2
                spacing: dp(60)
                padding: dp(20)
                Label:
                    size_hint_x: .7
                ImageButtonWithBackground:
                    size_hint: .3, .8
                    width: dp(64)
                    source: os.path.join(root.form_root, 'resc', 'icons', 'feedback_64.png')
                    on_press: root.feedback()
