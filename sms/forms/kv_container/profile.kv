#import os os

<Profile>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            size_hint_x: .5
            pos_hint: {'center_x': .5}

            BoxLayout:
                size_hint_y: None
                height: img.height
                AsyncImage:
                    id: img
                    source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-male-user-160.png')
                    size_hint: None, None
                    size: self.texture_size
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: .5
                    CustomLabel:
                        id: username
                        halign: 'left'
                        font_size: sp(35)
                    CustomLabel:
                        halign: 'left'
                        id: icon_email

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                BoxLayout:
                    orientation: 'vertical'
                    CustomLabel:
                        text: 'Name'
                        halign: 'left'
                    CustomTextInput:
                        id: fullname
                        size_hint_x: .7
                        disabled: True
                BoxLayout:
                    orientation: 'vertical'
                    CustomLabel:
                        text: 'Title'
                        halign: 'left'
                    CustomTextInput:
                        id: title
                        size_hint_x: .7
                        disabled: True
                BoxLayout:
                    orientation: 'vertical'
                    CustomLabel:
                        text: 'Email'
                        halign: 'left'
                    CustomTextInput:
                        id: email
                        size_hint_x: .7
                BoxLayout:
                    orientation: 'vertical'
                    CustomLabel:
                        text: 'Password'
                        halign: 'left'
                    CustomTextInput:
                        id: password
                        size_hint_x: .7
                        password: True

                RelativeLayout:
                    size_hint_x: .7
                    MenuButton:
                        text: 'Update'
                        size_hint_x: .4
                        pos_hint: {'center_x': .5}
                        on_press: root.update()
