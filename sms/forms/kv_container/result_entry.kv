<Result_Entry>:
    text_input: text_input
	canvas.before:
		Rectangle:
			size: self.size
			pos: self.pos
			source: os.path.join(root.form_root, 'resc', 'images', 'unibengate.jpg')
	FloatLayout:

        BoxLayout:
            pos_hint: {'top': 1}
            size_hint_y: .1
            height: 80
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: (0,0,0,.50)
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                size_hint_y: .12

                Label:
                    text: "Students' Result Entry"
                    bold: False
                    halign: 'center'
                    font_size: 30
                    size_hint_x: .9

                ImageButton:
                    size_hint_x: .1
                    source: os.path.join(root.form_root, 'resc', 'icons', 'menu-button.png')
                    on_press:
                        app.root.transition.direction = 'right'
                        app.root.current = 'main_page'

        BoxLayout:
            pos_hint: {'bottom': 1}
            size_hint_y: .8

            BoxLayout:
                size_hint_x: .6
                orientation: 'vertical'

                Label:
                    size_hint_y: .09

                CustomLabel:
                    text: "Upload Results"
                    halign: 'right'
                    valign: 'center'
                    padding: 35,1
                    font_size: 30
                    size_hint_y: .11
                    size_hint_x: .4
                    canvas.before:
                        Color:
                            rgba: (0,0,0,.50)
                        Rectangle:
                            size: self.size
                            pos: self.pos

                Label:
                    size_hint_y: 0.8

            ScrollView:
                do_scroll_x: True
                do_scroll_y: True
                size_hint_x: .4
                BoxLayout:
                    pos_hint: {'right': 1}
                    orientation: 'vertical'

                    Label:
                        size_hint_y: .1
                    Button:
                        text:"Load"
                        size_hint_y: .1
                        font_size: 25
                        background_color: (0,0,0,.8)
                        on_press:
                            root.show_load()
                    Button:
                        text:"Upload"
                        size_hint_y: .1
                        font_size: 25
                        background_color: (0,1,0,.8)
                        on_press:
                            root.show_save()
                    BoxLayout:
                        TextInput:
                            size_hint_x: .5
                            id: text_input
                            text: ''


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
