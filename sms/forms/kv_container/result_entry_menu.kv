<ResultEntryMenu>:
    BoxLayout:
        padding: dp(10)

        Label:
            size_hint_x: .6

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
            MenuButton:
                text: 'Result Entry (Single)'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'result_entry_single'
            MenuButton:
                text: 'Result Entry'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'result_entry_multiple'
            MenuButton:
                text: 'Entered Results'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'result_entry'
            Label:
