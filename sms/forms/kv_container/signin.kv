<SigninWindow>:
    username: username.text
    password: pwd.text

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        size_hint: 1/3., .3
        pos_hint: {'center_x': .5, 'center_y': .7}

        CustomTextInput:
            id: username
            size_hint_x: 1
            hint_text: "Username"
            focus: True
            on_text_validate: pwd.focus = True
        CustomTextInput:
            id: pwd
            size_hint_x: 1
            hint_text: "Password"
            password: True
            on_text_validate: root.get_session_key()
        Label:
            size_hint_y: None
            height: dp(20)
        MenuButton:
            text: "Sign In"
            size_hint_y: 1
            background_color: (0,0,0,.80)
            background_normal: ''
            on_press: root.get_session_key()


<SigninPopupContent>:
    username: username.text
    password: pwd.text

    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(20)
        CustomTextInput:
            id: username
            focus: True
            hint_text: "Username"
            size_hint_x: 1
            on_text_validate: pwd.focus = True
        CustomTextInput:
            id: pwd
            password: True
            hint_text: "Password"
            size_hint_x: 1
            on_text_validate: root.signin()
        MenuButton:
            text: "Sign In"
            size_hint_y: 1
            on_press: root.signin()
