<SigninWindow>:
    username: username.text
    password: pwd.text

    BoxLayout:
        orientation: "vertical"

        GridLayout:
            cols: 3
            spacing: dp(20)
            padding: dp(20)

            Label:
                size_hint: .3, .2
            Label:
                size_hint: .4, .2
            Label:
                size_hint: .3, .2

            Label:
                size_hint_x: .3
            BoxLayout:
                orientation: "vertical"
                spacing: dp(15)
                size_hint: .4, .3

                CustomTextInput:
                    id: username
                    size_hint_x: 1
                    hint_text: "Username"
                    focus: True
                    on_text_validate: pwd.focus = True
                CustomTextInput:
                    id: pwd
                    size_hint_x: 1
                    hint_text: "Password"
                    password: True
                    on_text_validate: root.get_session_key()
                Label:
                    size_hint_y: None
                    height: dp(20)
                MenuButton:
                    text: "Sign In"
                    size_hint_y: 1
                    background_color: (0,0,0,.80)
                    background_normal: ''
                    on_press: root.get_session_key()
            Label:
                size_hint_x: .3

            Label:
                size_hint_x: .3
            Label:
                size_hint_x: .4
            GridLayout:
                cols: 2
                size_hint_x: .3
                spacing: dp(60)
                padding: dp(20)
                Label:
                Label:

                Label:
                    size_hint_x: .5
                ImageButtonWithBackground:
                    size_hint: .5, .8
                    width: dp(64)
                    source: os.path.join(root.form_root, 'resc', 'icons', 'feedback_64.png')
                    on_press: root.feedback()


<SigninPopupContent>:
    username: username.text
    password: pwd.text

    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(20)
        CustomTextInput:
            id: username
            focus: True
            hint_text: "Username"
            size_hint_x: 1
            on_text_validate: pwd.focus = True
        CustomTextInput:
            id: pwd
            password: True
            hint_text: "Password"
            size_hint_x: 1
            on_text_validate: root.signin()
        MenuButton:
            text: "Sign In"
            size_hint_y: 1
            on_press: root.signin()
