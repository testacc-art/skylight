<StudentUpdatePopup>:
    size_hint: (.4, .8)
    title: 'Student Update'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            padding: 20
            spacing: (10, 5)
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 30
            row_force_default: True
            CustomLabel:
                text: 'Mat number'
            CustomTextInput:
                text: 'ENG'
                width: 125
            CustomLabel:
                text: 'Raw score'
            CustomSpinner:
                values: ['Yes', 'No']
        Button:
            size_hint_y: None
            height: 30
            text: 'Search'
        FloatLayout

<StudenUpdateForm>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, .3)
        Rectangle:
            size: self.size
            pos: self.pos

