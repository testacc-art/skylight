<MainPage>:
    dv: dv
    BoxLayout:
        padding: dp(10)

        FloatLayout:
            size_hint_x: .6
            DataViewer2:
                id: dv
                cols: 3
                center_y: .5
                weightings: [.2, .4, .2]
                headers: ['User', 'Action', 'Time']
                _data: root.logs

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4

            MenuButton:
                text: "Personal Data"
                on_press:
                    root.manager.current = 'personal_info'
            MenuButton:
                text:"Course Details"
                on_press:
                    root.manager.current = 'course_details'
            MenuButton:
                text:"Reports"
                on_press:
                    root.manager.current = 'page_reports'
            MenuButton:
                text:"Logs"
                on_press:
                    root.manager.current = 'logs'
            Label:
