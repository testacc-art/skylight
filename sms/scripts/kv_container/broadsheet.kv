<BroadsheetPopup>:
    size_hint: (.3, .4)
    title: 'Broadsheet'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            padding: 20
            spacing: (10, 5)
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 30
            row_force_default: True
            CustomLabel:
                text: 'Academic session'
                size_hint_x: .8
            CustomTextInput:
                id: acad_session
                width: dp(100)
                input_filter: 'int'
                max_length: 4
            CustomLabel:
                text: 'Level'
                size_hint_x: .8
            CustomSpinner:
                id: level
                values: ['100', '200', '300', '400', '500']
            CustomLabel:
                text: 'Raw score'
                size_hint_x: .8
            CustomSpinner:
                id: raw_score
                values: ['Yes', 'No']
            CustomLabel:
                text: 'Semester'
                size_hint_x: .8
            CustomSpinner:
                id: semester
                values: ['All', 'First Only']
        Button:
            size_hint: .4, None
            pos_hint: {'center_x': .5}
            height: dp(30)
            text: 'Search'
            on_press: root.search()
        FloatLayout
