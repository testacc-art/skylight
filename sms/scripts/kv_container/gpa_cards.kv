<GpaCardsView>:
    DataViewer2:
        id: dv
        cols: 8
        padding_x: dp(10)
        weightings: [.1, .3, .1, .1, .1, .1, .1, .1]
        headers: ['Matno', 'Full Names (Surname Last)', '100 Level', '200 Level', '300 Level', '400 Level', '500 Level', 'Cummulative GPA']
        _data: root.data

<GpaCardsPopup>:
    title: 'GPA Cards'
    size_hint: .25, None
    height: box.height + dp(50)
    BoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(20)
        spacing: dp(10)
        BoxLayout:
            size_hint_y: None
            height: dp(35)
            CustomLabel:
                text: 'Level'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: level
                size_hint_x: 1
                values: ['100', '200', '300', '400', '500', '600']
        Button:
            text: 'Search'
            on_press: root.get()
            size_hint: .5, None
            pos_hint: {'center_x': .5}
            height: dp(35)