<SenateVersionPopup>:
    size_hint: (.3, .3)
    title: 'Senate Version'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        GridLayout:
            cols: 2
            spacing: (10, 5)
            size_hint_y: .7
            height: self.minimum_height
            row_default_height: dp(30)
            row_force_default: True
            CustomLabel:
                text: 'Academic session'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomTextInput:
                id: acad_session
                size_hint_x: .4
                input_filter: 'int'
                max_length: 4
            CustomLabel:
                text: 'Level'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: level
                values: ['100', '200', '300', '400', '500']
                size_hint_x: .4
        Button:
            size_hint: 1, .3
            height: dp(30)
            text: 'Search'
            on_press: root.search()
