<StudentUpdatePopup>:
    size_hint: (.3, .4)
    title: 'Student Update'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        GridLayout:
            cols: 2
            spacing: (10, 5)
            size_hint_y: .8
            height: self.minimum_height
            row_default_height: 30
            row_force_default: True
            CustomLabel:
                text: 'Mat number'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomTextInput:
                id: mat_no
                text: 'ENG'
                size_hint_x: .4
            CustomLabel:
                text: 'Raw score'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: raw_score
                values: ['No', 'Yes']
                size_hint_x: .4
            CustomLabel:
                text: 'Clearance'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: clearance
                values: ['No', 'Yes']
                size_hint_x: .4
        Button:
            size_hint: 1, .2
            height: dp(30)
            text: 'Search'
            on_press: root.search()
