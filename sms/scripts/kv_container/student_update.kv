<StudentUpdatePopup>:
    size_hint: (.3, .4)
    title: 'Student Update'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            padding: 20
            spacing: (10, 5)
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 30
            row_force_default: True
            CustomLabel:
                text: 'Mat number'
                size_hint_x: .8
            CustomTextInput:
                id: mat_no
                text: 'ENG'
                width: 125
            CustomLabel:
                text: 'Raw score'
                size_hint_x: .8
            CustomSpinner:
                id: raw_score
                values: ['No', 'Yes']
            CustomLabel:
                text: 'Clearance'
                size_hint_x: .8
            CustomSpinner:
                id: clearance
                values: ['No', 'Yes']
        Button:
            size_hint: .4, None
            height: 30
            pos_hint: {'center_x': .5}
            text: 'Search'
            on_press: root.search()
        FloatLayout
